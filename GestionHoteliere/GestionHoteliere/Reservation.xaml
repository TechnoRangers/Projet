<Window x:Name="Res_frmReservation" x:Class="Reservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    Title="Techno Rangers Version 1.02 Reservation" WindowState="Maximized" Width="952" Height="530.4">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid x:Name="Res_grdReservation" Margin="10,0,3.2,-3.8">
        <GroupBox x:Name="Res_GroupBoxSejour" Header="Séjour" HorizontalAlignment="Left" Margin="266,46,0,0" VerticalAlignment="Top" Height="194" Width="625" FontSize="16" RenderTransformOrigin="0.5,0.5">
            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.166"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GroupBox.RenderTransform>
            <Grid x:Name="Res_GrdSejour" HorizontalAlignment="Left" Height="196" Margin="10,-12,-2.2,-19.2" VerticalAlignment="Top" Width="605">
                <Label x:Name="Res_LblDateArr" Content="Date d'arrivée" HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.205,1.789" FontSize="14"/>
                <DatePicker x:Name="Res_DatePickerArr" HorizontalAlignment="Left" Margin="405,44,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Res_LblDateDep" Content="Date départ" HorizontalAlignment="Left" Margin="304,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.652,0.525" FontSize="14"/>
                <DatePicker x:Name="Res_DatePikerDep" HorizontalAlignment="Left" Margin="405,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Res_LblNbAdulte" Content="Nombre d'adultes" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxNbAdulte" HorizontalAlignment="Left" Height="23" Margin="137,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83"/>
                <Label x:Name="Res_LblNbEnfants" Content="Nombre d'enfants" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxNbEnfants" HorizontalAlignment="Left" Height="23" Margin="137,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83"/>
                <Label x:Name="Res_LblNbNuit" Content="Nombre de nuit" HorizontalAlignment="Left" Margin="304,78,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxNbNuit" HorizontalAlignment="Left" Height="23" Margin="418,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79"/>
                <Label x:Name="Res_LblTypeChambre" Content="Type chambre" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label x:Name="Res_LblNoChambre" Content="No chambre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,-0.005" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxNoChambre" Text="{Binding CodeChambre}" HorizontalAlignment="Left" Height="23" Margin="113,10,0,0" TextWrapping="Wrap" IsEnabled="False" VerticalAlignment="Top" Width="79"/>
                <TextBox x:Name="Res_TextBoxTypeChambre" Text="{Binding NomTypeChambre}" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="113,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="176"/>
                <Label Content="Nom locataire" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" FontSize="14"/>
                <Label Content="Prénom locataire" HorizontalAlignment="Left" Margin="304,107,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxNomLocataire" HorizontalAlignment="Left" Height="23" Margin="137,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83"/>
                <TextBox x:Name="Res_TextBoxPrenomLocataire" HorizontalAlignment="Left" Height="23" Margin="419,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="79"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="Res_GroupBoxPaiement" Header="Paiement" HorizontalAlignment="Left" Margin="265,251,0,0" VerticalAlignment="Top" Height="64" Width="632" FontSize="16">
            <Grid HorizontalAlignment="Left" Height="79" Margin="0,-25,-2.8,-18.8" VerticalAlignment="Top" Width="622">
                <Label x:Name="Res_LblMoyenPaiement" Content="Moyen de paiement" HorizontalAlignment="Left" Margin="28,23,0,0" VerticalAlignment="Top" FontSize="14"/>
                <ComboBox x:Name="Res_ComboBoxMoyenPaiement" HorizontalAlignment="Left" Margin="167,25,0,0" VerticalAlignment="Top" Width="120">
                    <ComboBoxItem Content="Carte de crédit"/>
                    <ComboBoxItem Content="Argent"/>
                    <ComboBoxItem Content="Chèque"/>
                </ComboBox>
                <Label x:Name="Res_LblMontant" Content="Montant" HorizontalAlignment="Left" Margin="292,23,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_TextBoxMontant" HorizontalAlignment="Left" Height="23" Margin="361,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <Label x:Name="Res_LblDollars" Content="$" HorizontalAlignment="Left" Margin="486,16,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Button Content="Reserver" x:Name="Res_btnReserver" HorizontalAlignment="Left" Margin="741,320,0,0" VerticalAlignment="Top" Width="156" Height="45" FontSize="20"/>
        <Button Content="Annuler" x:Name="Res_btnAnnuler" HorizontalAlignment="Left" Margin="580,320,0,0" VerticalAlignment="Top" Width="156" Height="45" FontSize="20"/>
        <Button Content="Précédent" x:Name="Res_BtnPrecedent" HorizontalAlignment="Left" Margin="292,428,0,0" VerticalAlignment="Top" Width="156" Height="46"/>
        <Button Content="Suivant" x:Name="Res_BtnSuivant" HorizontalAlignment="Left" Margin="512,428,0,0" VerticalAlignment="Top" Width="149" Height="46"/>
        <Label Content="X sur X" HorizontalAlignment="Left" Margin="453,442,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ListView x:Name="res_lbvChambres" ItemsSource="{Binding}" Margin="10,47,672.4,130.2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Numéro chambre" Width="Auto" DisplayMemberBinding="{Binding NoSeqChambre}"/>
                    <GridViewColumn Header="Code" Width="Auto" DisplayMemberBinding="{Binding CodeChambre}"/>
                    <GridViewColumn Header="Étage" Width="Auto" DisplayMemberBinding="{Binding EtageChambre}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="Res_LblNbChambre" Content="Nombre chambre" HorizontalAlignment="Left" Margin="10,381,0,0" VerticalAlignment="Top" Width="122" FontSize="14"/>
        <TextBox x:Name="Res_TextBoxNbChambre"  HorizontalAlignment="Left" Height="23" Margin="137,381,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" IsEnabled="False"/>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="1458,381,-424,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Chambres" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
