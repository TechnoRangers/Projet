<Window x:Name="Res_frmReservation" x:Class="Reservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    Title="Techno Rangers Version 1.02 Reservation" WindowState="Maximized">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform" Margin="0,0,17.6,0.2">
        <Grid x:Name="Res_grdReservation" Margin="0,0,-5.4,-3.6" Width="983">
            <GroupBox x:Name="Res_GroupBoxSejour" Header="Séjour" HorizontalAlignment="Left" Margin="50,20,0,0" VerticalAlignment="Top" Height="198" Width="916" FontSize="16">
                <Grid x:Name="Res_GrdSejour" HorizontalAlignment="Left" Height="200" Margin="0,-12,-12,-16" VerticalAlignment="Top" Width="916">
                    <Label x:Name="Res_LblDateArr" Content="Date d'arrivée" HorizontalAlignment="Left" Margin="33,33,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.205,1.789" FontSize="14"/>
                    <DatePicker x:Name="Res_DatePickerArr" HorizontalAlignment="Left" Margin="147,33,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="Res_LblDateDep" Content="Date départ" HorizontalAlignment="Left" Margin="33,83,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.652,0.525" FontSize="14"/>
                    <DatePicker x:Name="Res_DatePikerDep" HorizontalAlignment="Left" Margin="147,83,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="Res_LblNbAdulte" Content="Nombre d'adultes" HorizontalAlignment="Left" Margin="389,32,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxNbAdulte" HorizontalAlignment="Left" Height="23" Margin="529,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83"/>
                    <Label x:Name="Res_LblNbEnfants" Content="Nombre d'enfants" HorizontalAlignment="Left" Margin="389,80,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxNbEnfants" HorizontalAlignment="Left" Height="23" Margin="529,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="83"/>
                    <Label x:Name="Res_LblNbNuit" Content="Nombre de nuit" HorizontalAlignment="Left" Margin="674,30,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxNbNuit" HorizontalAlignment="Left" Height="23" Margin="806,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79"/>
                    <Label x:Name="Res_LblHeurArr" Content="Heure d'arrivée" HorizontalAlignment="Left" Margin="674,81,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxHeurArr" HorizontalAlignment="Left" Height="23" Margin="806,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79"/>
                    <Label x:Name="Res_LblTypeChambre" Content="Type chambre" HorizontalAlignment="Left" Margin="33,136,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <Label x:Name="Res_LblNbChambre" Content="Nombre chambre" HorizontalAlignment="Left" Margin="389,133,0,0" VerticalAlignment="Top" Width="122" FontSize="14"/>
                    <Label x:Name="Res_LblNoChambre" Content="No chambre" HorizontalAlignment="Left" Margin="674,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,-0.005" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxNoChambre" Text="{Binding CodeChambre}" HorizontalAlignment="Left" Height="23" Margin="806,138,0,0" TextWrapping="Wrap" IsEnabled="False" VerticalAlignment="Top" Width="79"/>
                    <TextBox x:Name="Res_TextBoxTypeChambre" Text="{Binding NomTypeChambre}" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="147,136,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="176"/>
                    <TextBox x:Name="Res_TextBoxNbChambre"  HorizontalAlignment="Left" Height="23" Margin="529,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="83" IsEnabled="False"/>
                </Grid>
            </GroupBox>
            <GroupBox x:Name="Res_GroupBoxPaiement" Header="Paiement" HorizontalAlignment="Left" Margin="50,328,0,0" VerticalAlignment="Top" Height="64" Width="916" FontSize="16">
                <Grid HorizontalAlignment="Left" Height="79" Margin="0,-25,-12,-15.6" VerticalAlignment="Top" Width="916">
                    <Label x:Name="Res_LblMoyenPaiement" Content="Moyen de paiement" HorizontalAlignment="Left" Margin="28,23,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <ComboBox x:Name="Res_ComboBoxMoyenPaiement" HorizontalAlignment="Left" Margin="167,25,0,0" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="Carte de crédit"/>
                        <ComboBoxItem Content="Argent"/>
                        <ComboBoxItem Content="Chèque"/>
                    </ComboBox>
                    <Label x:Name="Res_LblMontant" Content="Montant" HorizontalAlignment="Left" Margin="420,25,0,0" VerticalAlignment="Top" FontSize="14"/>
                    <TextBox x:Name="Res_TextBoxMontant" HorizontalAlignment="Left" Height="23" Margin="515,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="Res_LblDollars" Content="$" HorizontalAlignment="Left" Margin="660,23,0,0" VerticalAlignment="Top"/>
                </Grid>
            </GroupBox>
            <Button Content="Reserver" x:Name="Res_btnReserver" HorizontalAlignment="Left" Margin="810,411,0,0" VerticalAlignment="Top" Width="156" Height="45" FontSize="20"/>
            <Button Content="Annuler" x:Name="Res_btnAnnuler" HorizontalAlignment="Left" Margin="627,412,0,0" VerticalAlignment="Top" Width="156" Height="45" FontSize="20"/>
            <Button Content="Précédent" x:Name="Res_BtnPrecedent" HorizontalAlignment="Left" Margin="627,223,0,0" VerticalAlignment="Top" Width="156" Height="46"/>
            <Button Content="Suivant" x:Name="Res_BtnSuivant" HorizontalAlignment="Left" Margin="810,223,0,0" VerticalAlignment="Top" Width="156" Height="46"/>

        </Grid>
    </Viewbox>
</Window>
