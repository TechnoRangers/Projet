<Window x:Class="ModifTypeChambre"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ModifTypeChambre" Height="267.286" Width="314.352" Icon="/GestionHoteliere;component/icone_Hotel.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid>
            <GroupBox x:Name="typchamb_grbTypeChambre" Header="Type Chambre" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="219" Width="288">
                <Grid HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" Width="274" Margin="0,0,-2,-11.6">
                    <Label Content="Code Type Chambre :  " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Nom Type Chambre : " HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="typchamb_txtCodeTypeChambre" MaxLength="3" Text="{Binding CodeTypeChambre}"  HorizontalAlignment="Left" Height="23" Margin="146,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="1"/>
                    <TextBox x:Name="typchamb_txtNomTypeChamb" MaxLength="20" Text="{Binding NomTypeChambre}" HorizontalAlignment="Left" Height="23" Margin="146,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="2"/>
                    <Button x:Name="typchamb_btnConfirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="191,169,0,0" VerticalAlignment="Top" Width="75"/>
                    <Label Content="Description Type Chambre : " HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="typchamb_txtDescTypeChambre" MaxLength="200" AcceptsReturn="True" Text="{Binding DescTypeChambre}" HorizontalAlignment="Left" Height="61" Margin="16,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" TabIndex="3"/>
                </Grid>
            </GroupBox>
        </Grid>
    </Viewbox>
    
</Window>
