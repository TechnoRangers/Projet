<Window x:Name="eqrec_frmEquipementRecreatif" x:Class="ModifEquipementRecreatif"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ModifEquipementRecreatif" Height="172.826" Width="585.869">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid>
            <GroupBox x:Name="eqrec_grbEquipementRecreatif" Header="Équipement Récréatif" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="121" Width="558">
                <Grid Height="105" VerticalAlignment="Top" Margin="0,0,-2.4,0">
                    <Label Content="Code Équipement : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Nom Équipement : " HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <Label Content="Catégorie Équipement : " HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="eqrec_txtCodeEquipementRecreatif" Text="{Binding CodeEquipementRecreatif}" HorizontalAlignment="Left" Height="23" Margin="151,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="eqrec_txtNomEquipement" Text="{Binding NomEquipement}" HorizontalAlignment="Left" Height="23" Margin="151,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="eqrec_txtCategorieEquipement" Text="{Binding CategorieEquipement}" HorizontalAlignment="Left" Height="23" Margin="148,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Date Aquisition : " HorizontalAlignment="Left" Margin="276,10,0,0" VerticalAlignment="Top"/>
                    <DatePicker x:Name="eqrec_dtpDateAquisition" SelectedDate="{Binding DateAquisition}" HorizontalAlignment="Left" Margin="382,10,0,0" VerticalAlignment="Top" Width="156"/>
                    <Label Content="Date Fin Garantie : " HorizontalAlignment="Left" Margin="276,41,0,0" VerticalAlignment="Top"/>
                    <DatePicker x:Name="eqrec_dtpDateFinGarantie" HorizontalAlignment="Left" SelectedDate="{Binding DateFinGarantie}" Margin="391,40,0,0" VerticalAlignment="Top" Width="147"/>
                    <Button x:Name="eqrec_btnConfirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="463,73,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </GroupBox>

        </Grid>
    </Viewbox>
    
</Window>
