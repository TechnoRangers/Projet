<Window x:Class="ModifCategorieFourniture"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ModifCategorieFourniture" Height="179.779" Width="282.353">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid>
            <GroupBox Header="Catégorie Fourniture" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="132" Width="256">
                <Grid HorizontalAlignment="Left" Height="111" VerticalAlignment="Top" Width="238" Margin="0,0,-2,-11.8">
                    <Label Content="Code Catégorie : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Nom Catégorie : " HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="catfour_txtCodeCategorie" MaxLength="3" Text="{Binding CodeCategorie}" HorizontalAlignment="Left" Height="23" Margin="116,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="catfour_txtNomCategorie" MaxLength="20" Text="{Binding NomCategorie}" HorizontalAlignment="Left" Height="23" Margin="116,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="catfour_btnConfirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="153,79,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </GroupBox>

        </Grid>
    </Viewbox>
    
</Window>
