<Window x:Name="pro_frmProvince" x:Class="Province"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Province" Height="200.896" Width="387.922">
    <Grid>
        <DataGrid x:Name="pro_dtgProvince" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="152" Width="283">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code Province" Binding="{Binding CodeProvince, Mode=OneWay}"/>
                <DataGridTextColumn Header="Nom Province" Binding="{Binding NomProvince, Mode=OneWay}"/>
                <DataGridTextColumn Header="Code Pays" Binding="{Binding CodePays, Mode=OneWay}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="pro_btnAjouter" Content="Ajouter" HorizontalAlignment="Left" Margin="298,9,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="pro_btnModifier" Content="Modifier" HorizontalAlignment="Left" Margin="298,36,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="pro_btnSupprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="298,63,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
