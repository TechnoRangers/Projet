<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Name="ajoutitemhot_frmAjoutItemHotel" x:Class="AjoutItemHotel"
    Title="AjoutItemHotel" Height="195.982" Width="457.393">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <ListView x:Name="ajoutitemhot_lbvFourniture" HorizontalAlignment="Left" Height="117" Margin="10,41,0,0" VerticalAlignment="Top" Width="223">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Code Fourniture" Width="Auto" DisplayMemberBinding="{Binding CodeFourniture}"/>
                    <GridViewColumn Header="Description" Width="Auto" DisplayMemberBinding="{Binding DescFourniture}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="ajoutitemhot_cmbFournisseur" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="138"/>
        <Label Content="Fournisseur" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Information" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="233,0,0.2,34">
            <Border CornerRadius="5"  Margin="0,0,-2.4,-1.8" BorderBrush="Black" BorderThickness="4">
                <Grid>
                    <Label Content="Quantité Min" HorizontalAlignment="Left" Margin="4,13,0,0" VerticalAlignment="Top"/>
                    <Label Content="Quantité Max" HorizontalAlignment="Left" Margin="5,45,0,0" VerticalAlignment="Top"/>
                    <Label Content="Quantité" HorizontalAlignment="Left" Margin="5,76,0,0" VerticalAlignment="Top"/>
                    <xctk:MaskedTextBox x:Name="ajoutitemhot_txtQuantiteMin" InsertKeyMode="Insert" PromptChar=" " Mask="000000" HorizontalAlignment="Left" Margin="87,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103"/>
                    <xctk:MaskedTextBox x:Name="ajoutitemhot_txtQuantiteMax" PromptChar=" " Mask="000000" HorizontalAlignment="Left" Margin="87,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103"/>
                    <xctk:MaskedTextBox x:Name="ajoutitemhot_txtQuantite" PromptChar=" " Mask="000000" HorizontalAlignment="Left" Margin="87,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="103"/>
                </Grid>
            </Border>
        </GroupBox>
        <Button x:Name="ajoutitemhot_btnConfirmer" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="332,134,0,-1" VerticalAlignment="Top" Width="119">
            <Border CornerRadius="5" Height="29" Width="109" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                <TextBlock Text="Confirmer" FontSize="14" Margin="23,1,0,3.8" HorizontalAlignment="Left" Width="59"/>
            </Border>
        </Button>
    </Grid>
</Window>
