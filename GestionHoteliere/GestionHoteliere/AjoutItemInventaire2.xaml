<Window x:Class="AjoutItemInventaire2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AjoutItemInventaire2" ResizeMode="NoResize" Height="280.155" Width="448.489">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Content="Ajouter un item à l'inventaire" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Code Fourniture" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ajoutinv_txtCodeFourniture" HorizontalAlignment="Left" Height="23" Margin="111,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ajoutinv_txtDescription" HorizontalAlignment="Left" AcceptsReturn="True" Height="72" Margin="10,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="412"/>
        <Label Content="Catégorie" HorizontalAlignment="Left" Margin="236,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ajoutinv_btnConfirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="347,211,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="ajoutinv_cmbCategorie" HorizontalAlignment="Left" Margin="302,44,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Fournisseur" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ajoutinv_cmbFournisseur" HorizontalAlignment="Left" Margin="111,71,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Prix" HorizontalAlignment="Left" Margin="236,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ajoutinv_txtPrix" HorizontalAlignment="Left" Height="23" Margin="302,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
