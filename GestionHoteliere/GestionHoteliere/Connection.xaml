<Window x:Name="Con_frmConnection"  x:Class="Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    Title="Techno Rangers Version 1.6 Connection" WindowState="Maximized" Icon="icone_Hotel.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid Margin="0,0,4,-3.6" Height="531" VerticalAlignment="Top" Width="666">
            <GroupBox x:Name="Con_GrpLogin"  FontSize="20" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="0,0,130,0" VerticalAlignment="Bottom" Height="219" Width="422" FontWeight="Bold" >
                <Border CornerRadius="5"  Margin="0,1,0,3.8" BorderBrush="Black" BorderThickness="4,4,4,4" HorizontalAlignment="Left" Width="401">
                    <Grid x:Name="Con_GrdLogin" HorizontalAlignment="Left" Height="181" VerticalAlignment="Top" Width="382" Margin="0,0,0,-1.8" >
                        <Label x:Name="Con_LblIdentifiant" Content="Identifiant : "  HorizontalAlignment="Left" Margin="3,12,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label x:Name="Con_LblMotDePasse"  Content="Mot de passe : " HorizontalAlignment="Left" Margin="2,49,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <Label x:Name="Con_LblHotel"       Content="Hôtel : "        HorizontalAlignment="Left" Margin="3,88,0,0" VerticalAlignment="Top" FontSize="20"/>
                        <TextBox     x:Name="Con_TxtIdentifiant" FontSize="14"  HorizontalAlignment="Left"  Margin="177,19,-44,0"  VerticalAlignment="Top" Width="177" Height="23" TextWrapping="Wrap"/>
                        <PasswordBox x:Name="Con_TxtMotPasse"     FontSize="14" HorizontalAlignment="Left" Margin="178,56,0,0"     VerticalAlignment="Top" Width="176" Height="25"/>
                        <Button      x:Name="Con_BtnConnexion"    Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="202,125,0,0"  VerticalAlignment="Top" Width="158" Height="56">
                            <Border CornerRadius="5" Height="46" Width="148" Background="DodgerBlue" Margin="0" BorderBrush="Black" BorderThickness="4" >
                                <TextBlock Text="Connexion" Margin="27,6,19.6,7.8" FontSize="20"/>
                            </Border>
                        </Button>
                        <Label x:Name="con_lblErreurConnexion" Content="Erreur de connexion" HorizontalAlignment="Left" Margin="5,139,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="20"/>
                        <ComboBox    x:Name="Con_CmbHotel"        HorizontalAlignment="Left" Margin="178,93,0,0"   VerticalAlignment="Top" FontSize="14" Width="176" Height="23" />
                    </Grid>
                </Border>
            </GroupBox>
            <Image Margin="103,0,105,202" Source="logo_hotel_payette.png" Stretch="Fill"/>
        </Grid>
    </Viewbox>
</Window>  


