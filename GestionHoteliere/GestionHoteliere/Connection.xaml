<Window x:Name="Con_frmConnection"  x:Class="Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStartupLocation="CenterScreen"
    Title="Techno Rangers Version 1.3 Connection" WindowState="Maximized" Height="367.7" Width="438.833">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid Margin="0,0,4,-3.6" Height="531" VerticalAlignment="Top" Width="666">
            <GroupBox x:Name="Con_GrpLogin" Header="Login" HorizontalAlignment="Right" Margin="180,0,178,10" VerticalAlignment="Bottom" Height="209" Width="309" FontWeight="Bold" >
                <Grid x:Name="Con_GrdLogin" HorizontalAlignment="Left" Height="181" VerticalAlignment="Top" Width="310" Margin="0,0,-13.2,0" >
                    <Label x:Name="Con_LblIdentifiant" Content="Identifiant : "  HorizontalAlignment="Left" Margin="3.6,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="Con_LblMotDePasse"  Content="Mot de passe : " HorizontalAlignment="Left" Margin="3.6,49,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="Con_LblHotel"       Content="Hôtel : "        HorizontalAlignment="Left" Margin="3.6,88,0,0" VerticalAlignment="Top"/>
                    <TextBox     x:Name="Con_TxtIdentifiant"  HorizontalAlignment="Left"  Margin="100.397,10,0,0"  VerticalAlignment="Top" Width="177" Height="23" TextWrapping="Wrap"/>
                    <ComboBox    x:Name="Con_CmbHotel"        HorizontalAlignment="Left" Margin="101.397,88,0,0"   VerticalAlignment="Top" Width="176" />
                    <PasswordBox x:Name="Con_TxtMotPasse"     HorizontalAlignment="Left" Margin="101.6,55,0,0"     VerticalAlignment="Top" Width="176"/>
                    <Button      x:Name="Con_BtnConnexion"    HorizontalAlignment="Left" Margin="121.397,125,0,0"  VerticalAlignment="Top" Width="156" Height="45" Content="Connexion"/>
                </Grid>
            </GroupBox>
            <Image Margin="103,0,105,202" Source="logo_hotel_payette.png" Stretch="Fill"/>
        </Grid>
    </Viewbox>
</Window>  


