                    <ComboBoxItem Content="Monsieur"/>
                    <ComboBoxItem Content="Madame"/>
                    <ComboBoxItem Content="Mademoiselle"/>
                </ComboBox>
                <Label x:Name="Res_LblNom" Content="*Nom" HorizontalAlignment="Left" Margin="454.8,24,0,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1"/>
