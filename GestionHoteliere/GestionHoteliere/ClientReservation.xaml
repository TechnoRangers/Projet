                <Label Content="** = Champ facultatif" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top" Width="277" Height="29" />
                <DataGrid x:Name="Cli_DtgHistorique" HorizontalAlignment="Left" Margin="748,10,-226,0" VerticalAlignment="Top" Height="418" Width="384"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
