<Window x:Class="ClientReservation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ClientReservation" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid HorizontalAlignment="Left" Height="464" VerticalAlignment="Top" Width="1144" Margin="0,0,-2.4,-16">
            <Label x:Name="Res_LblCivilite" Content="Civilité" HorizontalAlignment="Left" Margin="10,24,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox x:Name="Res_CmbCivil" HorizontalAlignment="Left" Margin="107,19,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="0.865,0.421" Height="27">
                <ComboBoxItem Content="Monsieur"/>
                <ComboBoxItem Content="Madame"/>
                <ComboBoxItem Content="Mademoiselle"/>
            </ComboBox>
            <Label x:Name="Res_LblNom" Content="*Nom" HorizontalAlignment="Left" Margin="432,19,0,0" VerticalAlignment="Top" FontSize="14"/>
            <TextBox x:Name="Res_TextBoxNom" HorizontalAlignment="Left" Height="23" Margin="478,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="176" RenderTransformOrigin="0.504,0.356"/>
            <Label x:Name="Res_LblPren" Content="*Prénom" HorizontalAlignment="Left" Margin="193,21,0,0" VerticalAlignment="Top" FontSize="14"/>
            <TextBox x:Name="Res_TextBoxPren" HorizontalAlignment="Left" Height="23" Margin="255,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="173"/>
            <Label x:Name="Res_LblAdresse" Content="Adresse" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" FontSize="14" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Res_TextBoxAdresse" Text="{Binding adresseClient}" HorizontalAlignment="Left" Height="23" Margin="107,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="547"/>
            <Label x:Name="Res_LblCodePostal" Content="*Code postal" HorizontalAlignment="Left" FontSize="14" Margin="336,76,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="Res_TextBoxCodePostal" HorizontalAlignment="Left" Height="23" Margin="431,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="89"/>
            <Label x:Name="Res_NoTel" Content="No Tel" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="1.184,-2.778"/>
            <Button x:Name="Cli_BtnContinuer" Content="Continuer" HorizontalAlignment="Left" Margin="529,387,0,0" VerticalAlignment="Top" Width="125" Height="65"/>
            <Button x:Name="Cli_BtnRechercher" Content="Rechercher" HorizontalAlignment="Left" Margin="363,387,0,0" VerticalAlignment="Top" Width="125" Height="65"/>
            <Button x:Name="Cli_BtnAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="10,387,0,0" VerticalAlignment="Top" Width="125" Height="65"/>
            <Label Content="*   = Champ obligatoire pour la recherche" HorizontalAlignment="Left" Margin="10,253,0,0" VerticalAlignment="Top" Width="277" Height="29" />
            <DataGrid x:Name="Cli_DtgHistorique" HorizontalAlignment="Left" Margin="724,37,0,0" VerticalAlignment="Top" Height="415" Width="384"/>
            <Label Content="Résultat : " HorizontalAlignment="Left" Margin="725,10,0,0" VerticalAlignment="Top" FontSize="14"/>
            <Label x:Name="Res_LblEmail" Content="E-mail" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" FontSize="14"/>
            <TextBox x:Name="Res_TxtEmail" Text="{Binding emailClient}" HorizontalAlignment="Left" Height="23" Margin="108,180,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="546"/>
            <TextBox x:Name="Res_NoTelephone" Text="{Binding NoTelephone}" HorizontalAlignment="Left" Height="23" Margin="108,78,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="212"/>
        </Grid>
    </Viewbox>
</Window>
