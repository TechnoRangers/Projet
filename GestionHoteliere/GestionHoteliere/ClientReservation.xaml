                <TextBox x:Name="Res_TextBoxAdresse" HorizontalAlignment="Left" Height="23" Margin="62.6,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="592" Grid.Column="1"/>
                <Label x:Name="Res_LblCodePostal" Content="*Code postal" HorizontalAlignment="Left" Margin="321,76,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Res_TextBoxCodePostal" HorizontalAlignment="Left" Height="23" Margin="431,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="89"/>
                <Label x:Name="Res_LblDateDeNaissance" Content="**Date de naissance" HorizontalAlignment="Left" Margin="10,174,0,0" VerticalAlignment="Top" FontSize="14"/>
                <TextBox x:Name="Res_JourDateNaiss" HorizontalAlignment="Left" Height="23" Margin="148,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44"/>
                <Label x:Name="Res_BarreObl1" Content="/" HorizontalAlignment="Left" Margin="194,172,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.357,-0.403"/>
                <TextBox x:Name="Res_MoisDateNaiss" HorizontalAlignment="Left" Height="23" Margin="211,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="47"/>
                <Label x:Name="Res_BarreObl2" Content="/" HorizontalAlignment="Left" Margin="261,173,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Res_AnneeDateNaiss" HorizontalAlignment="Left" Height="23" Margin="277,177,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57"/>
                <Label x:Name="Res_LblJour" Content="JJ" HorizontalAlignment="Left" Margin="159,202,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Res_LblMois" Content="MM" Margin="219,205,0,0" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-8.705,1.308"/>
                <Label x:Name="Res_LblAnnee" Content="AAAA" HorizontalAlignment="Left" Margin="286,205,0,0" VerticalAlignment="Top" FontSize="12"/>
                <Label x:Name="Res_NoTel" Content="No Tel" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="1.184,-2.778"/>
                <TextBox x:Name="Res_TextBoxTelPart1" HorizontalAlignment="Left" Height="23" Margin="140,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="52"/>
                <Label x:Name="Res_LblSeparation1" Content="-" HorizontalAlignment="Left" Margin="120,76,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Res_TextBoxTelPart2" HorizontalAlignment="Left" Height="23" Margin="63,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="52"/>
                <TextBox x:Name="Res_TextBoxTelPart3" HorizontalAlignment="Left" Height="23" Margin="217,78,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57"/>
                <Label x:Name="Res_LblSeparation2" Content="-" HorizontalAlignment="Left" Margin="197,72,0,0" VerticalAlignment="Top"/>
                <Button x:Name="Cli_BtnContinuer" Content="Continuer" HorizontalAlignment="Left" Margin="561,363,0,-118" VerticalAlignment="Top" Width="125" Height="65"/>
                <Button x:Name="Cli_BtnRechercher" Content="Rechercher" HorizontalAlignment="Left" Margin="363,363,0,0" VerticalAlignment="Top" Width="125" Height="65"/>
                <Button x:Name="Cli_BtnAnnuler" Content="Annuler" HorizontalAlignment="Left" Margin="148,363,0,0" VerticalAlignment="Top" Width="125" Height="65"/>
