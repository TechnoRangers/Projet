                <Grid.RowDefinitions>
                    <RowDefinition Height="31.4"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="réservation" FontSize="24" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Height="236" Margin="0,10,-213.6,-214" VerticalAlignment="Top" Width="264">
