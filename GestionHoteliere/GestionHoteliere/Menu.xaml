                                        <Image Source ="C:\Users\Utilisateur\Documents\GitHub\Projet\GestionHoteliere\GestionHoteliere\Images\Salle.jpg" Margin="10,4,45,4" Width="100"/>
                                        <TextBlock Text="Salle" FontSize="20" Margin="0,19,0,17" Width="45"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>
                    </Border>
                </GroupBox>

                <GroupBox Header="Gestion" FontSize="24" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Height="236" Margin="0,223,-213.6,-427" VerticalAlignment="Top" Width="264">
                    <Border CornerRadius="5"  Margin="0,1,-2.8,13.8" BorderBrush="Black" BorderThickness="3">
                        <Grid>
                            <Button  x:Name="Men_btnInventaire" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"    Margin="4,2,6.4,85.6">
                                <Border CornerRadius="5" Height="74" Width="221" Background="Teal" Margin="0" BorderBrush="Black" BorderThickness="3" >
                                    <StackPanel Orientation="Horizontal" Height="70" Margin="-4,0,-4.2,-4.4">
                                        <Image Source ="C:\Users\Utilisateur\Documents\GitHub\Projet\GestionHoteliere\GestionHoteliere\Images\Inventaire.jpg" Margin="10,-2,05,2.4" Width="115"/>
                                        <TextBlock Text="Inventaire" FontSize="20" Margin="0,20,0,16.4" Width="82"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                            <Button x:Name="Men_BtnConsoleAdmin" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Height="88" Margin="7,86,0,0" VerticalAlignment="Top" Width="229">
                                <Border CornerRadius="5" Height="74" Width="221" Background="Teal" Margin="0" BorderBrush="Black" BorderThickness="3" >
                                    <StackPanel Orientation="Horizontal" Height="70" Margin="-4,0,-4.2,-4.4">
                                        <Image Source ="C:\Users\Utilisateur\Documents\GitHub\Projet\GestionHoteliere\GestionHoteliere\Images\Ajouter.jpg" Margin="05,4,05,6.4" Width="80"/>
                                        <TextBlock Text="Console admin" FontSize="20" Margin="0,20,0,16.4" Width="121"/>
