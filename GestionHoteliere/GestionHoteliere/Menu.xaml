                <GroupBox Header="Information" FontSize="24" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Height="191" Margin="986,16,-1188.6,-175" VerticalAlignment="Top" Width="253">
                    <Border CornerRadius="5"  Margin="0,1,3,5.4" BorderBrush="Black" BorderThickness="3">
                        <Grid>
                            <Label x:Name="Men_LblNomEmploye" Content="Nom employé"  FontSize="20" HorizontalAlignment="Right" Height="32" Margin="0,100,0.8,0" VerticalAlignment="Top" Width="218"/>
                            <Label x:Name="Men_LbltypeEmploi" Content="Type employé" FontSize="20" HorizontalAlignment="Right" Height="34" Margin="0,53,0.8,0"  VerticalAlignment="Top" Width="218"/>
                            <Label x:Name="Men_LblHotel"      Content="Nom hotel"    FontSize="20" HorizontalAlignment="Right" Height="34" Margin="0,10,0.8,0"  VerticalAlignment="Top" Width="218"/>
                        </Grid>
                    </Border>
                </GroupBox>

                <Label x:Name="Men_LblBeinvenue"  Content="Bienvenue"    HorizontalAlignment="Left"  Height="100" Margin="470,32,-735.6,-100" VerticalAlignment="Top" Width="316" FontSize="65"/>
                <Image HorizontalAlignment="Left" Height="570" Margin="290,134,-930.6,-672" VerticalAlignment="Top" Width="691" Source="logo_hotel_payette.png"/>
                <Button x:Name="Men_btnQuitter" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Margin="1030,690,-1182.6,-742">
                    <Border CornerRadius="5" Height="75" Width="194" Background="Teal" Margin="0" BorderBrush="Black" BorderThickness="3" >
                        <TextBlock Text="Quitter" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,17,57.6,9.6" Height="31" Width="66"/>
