                                    <StackPanel Orientation="Horizontal" Height="70" Margin="-4,0,-4.2,-4.4">
                                        <Image Source ="C:\Users\Utilisateur\Documents\GitHub\Projet\GestionHoteliere\GestionHoteliere\Images\Chambre.jpg" Margin="10,2,20,6.4" RenderTransformOrigin="-9.848,-2.054" Width="105"/>
                                        <TextBlock Text="Chambre" FontSize="20" Height="34" Margin="0,0,0,18.4" VerticalAlignment="Bottom" Width="74"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                            <Border CornerRadius="5" Height="74" Width="221" Background="Teal" Margin="13,95,14,13.4" BorderBrush="Black" BorderThickness="3" >
                                <Button x:Name="Men_btnResSalle" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Padding="0"  HorizontalAlignment="Left" Margin="-3.2,-3.2,-3.4,-3.6" Width="221">
