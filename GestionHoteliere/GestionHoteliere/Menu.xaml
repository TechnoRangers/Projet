                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0.4">
                                <Image Source ="C:\Users\Utilisateur\Documents\GitHub\Projet\GestionHoteliere\GestionHoteliere\Images\Inventaire.jpg" Margin="3,4,5,4.2" Width="115"/>
