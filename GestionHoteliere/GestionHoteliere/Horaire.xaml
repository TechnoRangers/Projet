<Window x:Name="Hor_frmChiffreTravail" x:Class="Horaire"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Horaire" Height="413.612" Width="846.667" Icon="icone_Hotel.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label x:Name="Hor_LblTypeEmploi" Content="Département" FontSize="20" HorizontalAlignment="Left" Margin="31,34,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Hor_CmbTypeEmploi" HorizontalAlignment="Left" Margin="160,37,0,0" VerticalAlignment="Top" Width="176" Height="28"/>
        <Calendar x:Name="Hor_Calendrier" HorizontalAlignment="Left" Margin="49,88,0,0" VerticalAlignment="Top" Width="287" Height="235" />
        <DataGrid x:Name="Hor_DtgChiffreTravail" CanUserAddRows="False" HorizontalAlignment="Left" Margin="363,37,0,0" VerticalAlignment="Top" Height="323" Width="422" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="No Employé" Binding="{Binding NoEmploye}"/>
                <DataGridTextColumn Header="Heure Début" Binding="{Binding HeureDebut}"/>
                <DataGridTextColumn Header="Heure Fin" Binding="{Binding HeureFin}"/>
                <DataGridTextColumn Header="No Chiffre" Binding="{Binding NoChiffreTravail}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Hor_BtnQuitter"    Background="Transparent" BorderBrush="Transparent" BorderThickness="0"   HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top" Width="101" Height="37">
            <Border CornerRadius="5" Height="27" Width="91" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                <TextBlock Text="Quitter" FontSize="14" Margin="20,1,0,-3.8" HorizontalAlignment="Left" Width="45"/>
            </Border>
        </Button>
        <Button x:Name="Hor_BtnChangement" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"  HorizontalAlignment="Left" Margin="257,323,0,0" VerticalAlignment="Top" Width="101" Height="37">
            <Border CornerRadius="5" Height="27" Width="91" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                <TextBlock Text="Changement" FontSize="14" Margin="6,1,-3.8,-3.8" HorizontalAlignment="Left" Width="81"/>
            </Border>
        </Button>
        <Button x:Name="Hor_BtnAjout"      Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="135,323,0,0" VerticalAlignment="Top" Width="101" Height="37">
            <Border CornerRadius="5" Height="27" Width="91" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                <TextBlock Text="Ajout" FontSize="14" Margin="25,1,0,-3.8" HorizontalAlignment="Left" Width="55"/>
            </Border>
        </Button>

    </Grid>
</Window>
