<Window x:Name="For_FrmFor" x:Class="ForfaitAppli"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ForfaitAppli" Height="735" Width="1279" WindowState="Maximized" WindowStartupLocation="CenterScreen" Icon="icone_Hotel.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF437E87" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Viewbox Stretch="Uniform">
        <Grid>
            <GroupBox x:Name="For_GrpBoxForfait" Header="Liste Forfait" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="30,42,-0.2,0" VerticalAlignment="Top" Height="270" Width="1215" FontSize="16">
                <Border CornerRadius="5"  Margin="0,0,-2.6,-1.8" BorderBrush="Black" BorderThickness="4">
                    <Grid HorizontalAlignment="Left" Height="247" Margin="0,-17,-3.4,-6" VerticalAlignment="Top" Width="1205">
                        <DataGrid x:Name="For_dataGridForfait" AutoGenerateColumns="False"  HorizontalAlignment="Left" Margin="21,28,0,0" VerticalAlignment="Top" Height="209" Width="1165" FontSize="14">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding CodeForfait}" ClipboardContentBinding="{x:Null}" Header=" Code forfait"/>
                                <DataGridTextColumn Binding="{Binding NomForfait}" ClipboardContentBinding="{x:Null}" Header="Nom forfait"/>
                                <DataGridTextColumn Binding="{Binding PrixForfait}" ClipboardContentBinding="{x:Null}" Header="Prix forfait"/>
                                <DataGridTextColumn Binding="{Binding DescForfait}" ClipboardContentBinding="{x:Null}" Header="Description forfait"/>
                                <DataGridTextColumn Binding="{Binding NbNuit}" ClipboardContentBinding="{x:Null}" Header="Nombre nuit"/>
                                <DataGridTextColumn Binding="{Binding DateDebut}" ClipboardContentBinding="{x:Null}" Header="Date debut"/>
                                <DataGridTextColumn Binding="{Binding DateFin}" ClipboardContentBinding="{x:Null}" Header="Date fin"/>
                                <DataGridTextColumn Binding="{Binding CodeTypeChambre}" ClipboardContentBinding="{x:Null}" Header="Code type chambre"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </GroupBox>
            <GroupBox x:Name="For_GrpBoxReservation" Header="Réservation" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="30,317,0,0" VerticalAlignment="Top" Height="380" Width="625" FontSize="16">
                <Border CornerRadius="5"  Margin="0,0,-2.6,-1.8" BorderBrush="Black" BorderThickness="4">
                    <Grid HorizontalAlignment="Left" Height="353" Margin="0,0,-2.2,-1.8" VerticalAlignment="Top" Width="615">
                        <ComboBox x:Name="For_CmbBoxForfait" HorizontalAlignment="Left" Margin="89,20,0,0" VerticalAlignment="Top" Width="176"/>
                        <Label x:Name="For_LblForfait" Content="Forfait :" HorizontalAlignment="Left" Margin="19,20,0,0" VerticalAlignment="Top" Width="70" FontSize="14"/>
                        <DataGrid x:Name="For_DateGridDispoChambre" HorizontalAlignment="Left" AutoGenerateColumns="False"  Margin="19,65,0,0" VerticalAlignment="Top" Height="224" Width="586" FontSize="14">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding NoSeqChambre}" ClipboardContentBinding="{x:Null}" Header="No chambre"/>
                                <DataGridTextColumn Binding="{Binding EtageChambre}" ClipboardContentBinding="{x:Null}" Header="Etage"/>
                                <DataGridTextColumn Binding="{Binding NbLit}" ClipboardContentBinding="{x:Null}" Header="Nombre de lit"/>
                                <DataGridTextColumn Binding="{Binding TypeLit}" ClipboardContentBinding="{x:Null}" Header="Type de lit"/>
                                <DataGridTextColumn Binding="{Binding DescChambre}" ClipboardContentBinding="{x:Null}" Header="Description"/>
                                <DataGridTextColumn Binding="{Binding CodeTypeChambre}" ClipboardContentBinding="{x:Null}" Header="Code type chambre"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label x:Name="For_LblEtage" Content="Etage :" HorizontalAlignment="Left" Margin="19,305,0,0" VerticalAlignment="Top" FontSize="14"/>
                        <TextBox x:Name="For_TxtBoxEtage" HorizontalAlignment="Left" Height="23" Margin="75,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="79" FontSize="14"/>
                        <Label x:Name="For_LblNbLit" Content="Nombre de lit :" HorizontalAlignment="Left" Margin="205,305,0,0" VerticalAlignment="Top" FontSize="14"/>
                        <TextBox x:Name="For_TxtBoxNbLit" HorizontalAlignment="Left" Height="23" Margin="312,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="86" FontSize="14"/>
                        <Button x:Name="For_BtnReserver" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="476,303,0,0" VerticalAlignment="Top" Width="129" Height="50">
                            <Border CornerRadius="5" Height="40" Width="123" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                                <TextBlock Text="Réserver" FontSize="14" Margin="31,7,0,-2" HorizontalAlignment="Left" Width="55"/>
                            </Border>
                        </Button>
                    </Grid>
                </Border>
            </GroupBox>
            <GroupBox x:Name="For_GrpBoxForfaitReserve" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"  Header="Forfait reservé" HorizontalAlignment="Left" Margin="670,317,0,0" VerticalAlignment="Top" Height="380" Width="575" FontSize="16">
                <Border CornerRadius="5" Margin="0,0,-2.6,-1.8" BorderBrush="Black" BorderThickness="4">
                    <Grid HorizontalAlignment="Left" Height="362" VerticalAlignment="Top" Width="565" Margin="0,-11,-3.4,0">
                        <DataGrid x:Name="For_DataGridForfaitReserve" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.393,-0.312" Height="222" Width="545" FontSize="14">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding NoChambre}" ClipboardContentBinding="{x:Null}" Header="No chambre"/>
                                <DataGridTextColumn Binding="{Binding NomForfait}" ClipboardContentBinding="{x:Null}" Header="NomForfait"/>
                                <DataGridTextColumn Binding="{Binding NomClient}" ClipboardContentBinding="{x:Null}" Header="Nom client"/>
                                <DataGridTextColumn Binding="{Binding PrenomClient}" ClipboardContentBinding="{x:Null}" Header="Prénom client"/>
                                <DataGridTextColumn Binding="{Binding DateDebut}" ClipboardContentBinding="{x:Null}" Header="Date début"/>
                                <DataGridTextColumn Binding="{Binding DateFin}" ClipboardContentBinding="{x:Null}" Header="Date fin"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="For_BtnAnnuler" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"  HorizontalAlignment="Left" Margin="425,315,0,0" VerticalAlignment="Top" Width="130" Height="47">
                            <Border CornerRadius="5" Height="40" Width="123" Background="Chartreuse" Margin="0" BorderBrush="Black" BorderThickness="4">
                                <TextBlock Text="Annuler" FontSize="14" Margin="31,7,0,-2" HorizontalAlignment="Left" Width="55"/>
                            </Border>
                        </Button>
                    </Grid>
                </Border>
            </GroupBox>
        </Grid>
    </Viewbox>
</Window>
