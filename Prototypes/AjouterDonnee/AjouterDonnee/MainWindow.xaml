<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="233.904" Width="435.579" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="don_dtgChambres" CanUserAddRows="False" AlternatingRowBackground="AliceBlue" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="170" Width="256">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code Pays" Binding="{Binding CodePays}"/>
                <DataGridTextColumn Header="Nom Pays" Binding="{Binding NomPays}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="don_btnAjout" Content="Ajouter" HorizontalAlignment="Left" Margin="283,28,0,0" VerticalAlignment="Top" Width="125" Height="43"/>
        <Button x:Name="don_btnSupprimer" Content="Supprimer" HorizontalAlignment="Left" Margin="283,76,0,0" VerticalAlignment="Top" Width="125" Height="47"/>
        <Button x:Name="don_btnModifier" Content="Modifier" HorizontalAlignment="Left" Margin="283,128,0,0" VerticalAlignment="Top" Width="125" Height="52"/>
    </Grid>
</Window>
